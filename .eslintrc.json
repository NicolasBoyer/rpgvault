{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
    	"import",
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "error",
            4
//            {
//              "ignoredNodes": [
//               	"TemplateLiteral > *"
//              ]
//			}
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "@typescript-eslint/explicit-function-return-type": [
        	"error",
        	{ "allowTypedFunctionExpressions": false }
        ],
		"import/extensions": [
			"error",
			"always"
	   ]
    }
}
